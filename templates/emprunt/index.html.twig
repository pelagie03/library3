{% block empList %}
	<h3>Liste des emprunts</h3>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">N°</th>
				<th scope="col">Adhérent</th>
				<th scope="col">Livre</th>
				<th scope="col">Date d'emprunt</th>
				<th scope="col">Date de retour</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for emprunt in emprunt %}
				<tr>
					<td>{{ emprunt.id }}</td>
					<td>{{ emprunt.adherent }}</td>
					<td>{{ emprunt.pret }}</td>
					<td>{{ emprunt.date_emprunt }}</td>
					<td>{{ emprunt.date_retour }}</td>
					<td>
						<a href="{{ path('emp_edit', {'date_retour': emprunt.date_retour}) }}">modifier</a>
						<a href="{{ path('emp_del', {'adherent': emprunt.adherent, 'pret': emprunt.pret, 'date_emprunt': emprunt.date_emprunt, 'date_retour': emprunt.date_retour}) }}">supprimer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="2">no records found</td>
					<td colspan="2">no records found</td>
					<td colspan="2">no records found</td>
					<td colspan="2">no records found</td>
					<td colspan="2">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('emp_ajout') }}">Ajouter</a>

{% endblock %}
