{% block content %}

<div class="container">
        <div class="row">

            <!--Formulaire ajout de livre-->
            <div class="col">
                <form>
                    <div class="form-group">
                        <label for="titre">Titre</label>
                        <input type="text" class="form-control" id="titre" placeholder="Boutons et dentelle">
                    </div>
                    <div class="form-group">
                        <label for="auteur"> Auteur: </label>
                        <input type="text" class="form-control" id="auteur" placeholder="Penelope Sky">
                    </div>
                    <div class="form-group">
                        <label for="isbn"> ISBN: </label>
                        <input type="text" class="form-control" id="isbn" placeholder="123-456-789">
                    </div>
                    <label for="check"> Disponible: </label>
                    <div class="form-check" id="check">
                        <input class="form-check-input" type="radio" name="disponible" id="disponibilité" value="option1" checked>
                        <label class="form-check-label" for="disponibilité">
                          Oui
                        </label>
                    </div>
                    <div class="form-check" id="check2">
                        <input class="form-check-input" type="radio" name="disponible" id="disponibilité2" value="option2" checked>
                        <label class="form-check-label" for="disponibilité">
                          Non
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="genre">Genre:</label>
                        <input type="text" id="genre" name="genreLivre" placeholder="jeune adulte">
                    </div>
                </form>
            </div>
            <!--Tableau: liste des livres-->
            <div class="col ">
                <table class="table">
                    <caption>Liste des livres</caption>
                    <thead>
                        <tr>
                            <th scope="col">N°</th>
                            <th scope="col">Titre</th>
                            <th scope="col">Auteur</th>
                            <th scope="col">ISBN</th>
                            <th scope="col">Edition</th>
                            <th scope="col">Disponibilité</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Mark</td>
                            <td>Otto</td>
                            <td>@mdo</td>
                            <td>Mark</td>
                            <td>Otto</td>
                            <td>@mdo</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row ">
            <!--Liste des emprunts: tableau-->

            <table class="table">
                <caption>Liste des emprunts</caption>
                <thead>
                    <tr>
                        <th scope="col">Matricule</th>
                        <th scope="col">Livre ISBN</th>
                        <th scope="col">Date d'emprunt</th>
                        <th scope="col">Date de retour</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>@mdo</td>
                        <td>Mark</td>
                    </tr>
                </tbody>
            </table>
        </div>
</div>
