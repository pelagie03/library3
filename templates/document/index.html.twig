            <form>
                <div class="form-group">
                    <label for="titredoc">Titre:</label>
                    <input type="text" class="form-control" id="titredoc" placeholder="Kakafukaka">
                </div>
                <div class="form-group">
                    <label for="auteur"> Auteur: </label>
                    <input type="text" class="form-control" id="auteur" placeholder="Risa">
                </div>
                <select class="custom-select">
                    <option selected>Catégorie du document</option>
                    <option value="1">BD</option>
                    <option value="2">Dictionnaire</option>
                </select>
                <div class="form-group">
                    <label for="dessin"> Dessinateur: </label>
                    <input type="text" class="form-control" id="dessin" placeholder="Risa">
                </div>
                <div class="form-group">
                    <label for="year"> Année d'édition: </label>
                    <input type="date" class="form-control" id="year">
                </div>
            </form>

        </div>
